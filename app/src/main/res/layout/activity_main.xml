<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:backgroundTint="#000000"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lenovo.tictactoe.MainActivity"
    android:background="#a79a23">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:orientation="horizontal"
    android:weightSum="1">
    <Button
        android:layout_width="114dp"
        android:layout_height="71dp"
        android:id="@+id/btn11"

        android:textSize="30dp"
        android:layout_row="0"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_column="0"
        android:layout_alignTop="@+id/btn12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.22" />

    <Button
        android:layout_width="98dp"
        android:layout_height="match_parent"
        android:id="@+id/btn12"
        android:layout_row="0"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:background="#ffffff"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/btn21"
        android:layout_toRightOf="@+id/btn22"
        android:layout_toEndOf="@+id/btn22" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:id="@+id/btn13"
        android:layout_row="0"
        android:background="#ffffff"
        android:textSize="30dp"
        android:layout_column="2"
        android:layout_alignBaseline="@+id/btn23"
        android:layout_alignBottom="@+id/btn23"
        android:layout_alignRight="@+id/btn23"
        android:layout_alignEnd="@+id/btn23" />


</LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:id="@+id/btn21"
        android:textSize="30dp"
        android:layout_row="1"

        android:layout_column="0"
        android:layout_above="@+id/btn31"
        android:layout_toRightOf="@+id/btn11"
        android:layout_toEndOf="@+id/btn11" />

    <Button
        android:layout_width="wrap_content"
        android:background="#ffffff"
        android:layout_height="match_parent"
        android:id="@+id/btn22"
        android:layout_row="1"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:layout_column="1"
        android:layout_above="@+id/btn13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:id="@+id/btn23"
        android:textSize="30dp"
        android:layout_marginLeft="10dp"
        android:background="#ffffff"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btn31"
        android:layout_toEndOf="@+id/btn31"
        android:layout_below="@+id/btn31" />



</LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="124dp"
    android:orientation="horizontal"
    android:layout_marginTop="10dp">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/btn31"

        android:textSize="30dp"
        android:layout_row="2"
        android:background="#ffffff"
        android:layout_column="0"
        android:layout_alignBottom="@+id/btn33"
        android:layout_alignRight="@+id/btn21"
        android:layout_alignEnd="@+id/btn21" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="103dp"
        android:id="@+id/btn32"
        android:textSize="30dp"
        android:layout_row="2"
        android:layout_marginLeft="10dp"
        android:layout_column="1"
        android:background="#ffffff"
        android:layout_below="@+id/btn13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="101dp"
        android:textSize="30dp"
        android:id="@+id/btn33"
        android:layout_row="2"
        android:background="#ffffff"
        android:layout_column="2"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="103dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btn11"
        android:layout_toEndOf="@+id/btn11" />


</LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView" />

</LinearLayout>
